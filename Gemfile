source 'https://rubygems.org'

gem 'sinatra'

# View templating
gem 'haml'

# Opensearch gem to process results from api
gem 'opensearch'

gem 'json'

group :development, :test do
  # Use Rubocop for static code quality analysis
  gem 'rubocop'
end

group :test do
  gem 'capybara'
  gem 'rspec'
  gem 'simplecov', require: false
  gem 'webmock'
  gem 'vcr'
end